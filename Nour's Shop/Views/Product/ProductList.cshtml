@using Nour_Shop.ViewModels
@model List<Products>




<head>
    @section navigation {
        <header>
            <nav class="custom-cart">
                <div class="container-fluid">
                    <a href="/Product/Cart"><img src="/Images/cart2.png" alt="Cart Icon" class="cart-icon"></a>
                    <span id="cartNotification" class="cart-notification">@ViewData["orderedCount"]</span>
                </div>
            </nav>
        </header>
       
    }
    <title>Products</title>

</head>

<body>

  
        <h1>Products</h1>
    <div>
        @* <img src="/Images/Cart.jpg>" href="/Product/Cart" width="100px" height="40px"/>
        <button href="/Product/Cart">
            <img src="/Images/Cart.jpg>" width="100px" height="40px" href="/Product/Cart" />
        </button> *@
      
    </div>
   
    <div class="product-list">
        <ul>
            @foreach (var p in Model)
            {
                string Statuscolor =
                "";
                if (p.Status == "available" || p.Status == "available                                         ")
                    Statuscolor = "lawngreen";
                else
                    Statuscolor = "red";
          
                <li class="product-item">
                    <div class="image-container">
                        <img src="data:image;base64,@Convert.ToBase64String(p.ImageData)" alt="Product Image" />
                    </div>
                    <div class="details-container">
                        <h3 class="product-name">@p.Name</h3>
                        <p style="color: @Statuscolor;">@p.Status</p>
                        <p class="product-brand">@p.Brand</p>
                        <p class="product-price">Price: $@p.Price</p>
                        <p class="product-discount">Discount: @p.Discount%</p>
                    </div>
                    <a href="/Product/ProductDetails/@p.Id" class="view-button">View</a>
                </li>
            }
        </ul>
    </div>
</body>
<style>
    .cart-button {
        position: relative;
        background-color: #3498db;
        color: #fff;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }

    .cart-icon {
        width: 47px; /* Adjust the width and height as needed */
        height: 47px;
        margin-right: 5px; /* Add spacing between the icon and text */
    }

    .cart-notification {
        position: absolute;
        top: -5px;
        right: -5px;
        background-color: red;
        color: #fff;
        font-size: 12px;
        padding: 2px 6px;
        border-radius: 50%;
    }

    .custom-cart{
        position: absolute;
        top: 0;
        right: 0;
        margin-right: 8px;
        margin-top: 5px;
    }

    .product-list {
        width: 100%;
        border-collapse: collapse;
    }

    .product-list {
        width: 100%;
    }

    .product-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .image-container {
        width: 100px;
        height: 100px;
        overflow: hidden;
        border-radius: 4px;
        margin-right: 10px;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .details-container {
        flex: 1;
    }

    .product-name {
        margin: 0;
        font-size: 18px;
        font-weight: bold;
    }

    .product-status,
    .product-brand {
        margin: 5px 0;
        font-size: 14px;
    }

    .product-price,
    .product-discount {
        margin: 5px 0;
        font-size: 16px;
    }

    .view-button {
        display: inline-block;
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

        .view-button:hover {
            background-color: #0062cc;
        }
</style>